# API Keys and Authentication
OPENAI_API_KEY=your_openai_api_key_here

# Bilibili Cookies
BILIBILI_SESSDATA=your_sessdata_here
BILIBILI_BILI_JCT=your_bili_jct_here
BILIBILI_BUVID3=your_buvid3_here

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/video_aggregator
MONGODB_URL=mongodb://localhost:27017/video_aggregator
REDIS_URL=redis://localhost:6379/0

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# Scraping Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
PROXY_URL=

# Video Processing
WHISPER_MODEL=large-v3
MAX_VIDEO_DURATION=3600
TEMP_STORAGE_PATH=/tmp/video_processing

# RSS Feed Configuration
FEED_TITLE=Video Content Aggregator
FEED_DESCRIPTION=AI-powered video summaries from Bilibili, Douyin, and Kuaishou
FEED_LANGUAGE=zh-CN
ITEMS_PER_FEED=50

# Cache Configuration
CACHE_TTL=900
CACHE_ENABLED=True

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2