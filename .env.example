# Video RSS Aggregator - Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/video_aggregator
REDIS_URL=redis://localhost:6379/0

# API Keys (Platform Authentication)
YOUTUBE_API_KEY=your_youtube_api_key
BILIBILI_SESSDATA=your_bilibili_sessdata
BILIBILI_CSRF=your_bilibili_csrf
TIKTOK_API_KEY=your_tiktok_api_key

# Model Serving Configuration
TRITON_SERVER_URL=localhost:8001
TRITON_HTTP_PORT=8000
TRITON_GRPC_PORT=8001
MODEL_REPOSITORY_PATH=/models

# Performance Settings
MAX_WORKERS=4
BATCH_SIZE=32
GPU_MEMORY_FRACTION=0.8
ENABLE_FP8_QUANTIZATION=true

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=3600

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ENABLE_METRICS=true
ENABLE_TRACING=true

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=10000
ENABLE_DISTRIBUTED_CACHE=true

# Streaming Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
WEBSOCKET_PORT=8082
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302

# API Gateway
API_GATEWAY_PORT=8080
ENABLE_GRAPHQL=true
ENABLE_REST_V3=true
ENABLE_WEBHOOKS=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Content Filtering
ENABLE_CONTENT_FILTER=true
CONTENT_QUALITY_THRESHOLD=0.7
ENABLE_ADULT_FILTER=true
ENABLE_SPAM_DETECTION=true

# Debug Settings
DEBUG=false
LOG_LEVEL=INFO
PROFILE_PERFORMANCE=false